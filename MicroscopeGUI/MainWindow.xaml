<Window x:Class="MicroscopeGUI.UI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MicroscopeGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen" WindowState="Maximized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid Name="ToolCon" Grid.ZIndex="1" Grid.Column="0" Background="OrangeRed" Width="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <local:ConfigStepCon Grid.Row="0"/>
        </Grid>

        <local:ImageViewer x:Name="ZooDisplay" Grid.Column="1">
            <Image Source="C:/Users/Vincent/Desktop/SEMImages/CPUBruch.png" RenderOptions.BitmapScalingMode="NearestNeighbor"></Image>
        </local:ImageViewer>

        <Grid Name="ImageGalleryCon" Grid.ZIndex="1" Grid.Column="2" Background="Aqua" Width="200">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Label Content="Image Gallery" HorizontalAlignment="Center" Grid.Row="0"/>
            <ScrollViewer Grid.Row="1">
                <local:ImageGallery VerticalAlignment="Top" Margin="5, 5, 0, 0"/>
            </ScrollViewer>
        </Grid>

    </Grid>
</Window>
